{
    "compilerOptions": {
      "target": "ES6",                        
      "module": "CommonJS",                 
      "moduleResolution": "node",            
      "esModuleInterop": true,               
      "resolveJsonModule": true,            
      "strict": true,                        
      "outDir": "./dist",                    
      "rootDir": "./src",                  
      "skipLibCheck": true,                 
      "forceConsistentCasingInFileNames": true 
    },
    "include": ["src/**/*.ts"],          
    "exclude": ["node_modules"]               
  }
  